<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/green"
    tools:context=".login.LoginActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        >
        <TextView
            android:id="@+id/tvWelcome"
            style="@style/fontWelcome"
            android:layout_width="280dp"
            android:layout_marginTop="80dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nunito_semibold"
            android:text="Welcome,\nSign in to continue" />

        <com.example.submission1_intermediate.custom.EditTextEmail
            android:id="@+id/etEmail"
            android:layout_width="280dp"
            android:layout_height="48dp"
            android:layout_marginTop="40dp"
            android:inputType="textEmailAddress"  />


        <com.example.submission1_intermediate.custom.EditTextPassword
            android:id="@+id/password_custom"
            android:layout_width="280dp"
            android:layout_height="48dp"
            android:layout_marginTop="20dp"
            android:inputType="textPassword" />

        <com.example.submission1_intermediate.custom.BtnLogin
            android:id="@+id/button"
            style="@style/btnCustom"
            android:layout_width="280dp"
            android:layout_height="48dp"
            android:layout_marginTop="40dp" />

        <com.example.submission1_intermediate.custom.BtnRegister
            android:id="@+id/registerBtn"
            android:layout_width="280dp"
            android:layout_height="48dp"
            style="@style/btnCustom"
            android:layout_marginTop="18dp"
            />
    </LinearLayout>


    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="63dp"
        android:layout_height="58dp"
        android:visibility="gone"
        tools:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>