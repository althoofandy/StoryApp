<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Submission1_Intermediate" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/green</item>
        <item name="colorPrimaryVariant">@color/green</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
    </style>
    <style name="btnCustom" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:fontFamily">@font/nunito_semibold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:minWidth">280dp</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="fontWelcome" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:textSize">28sp</item>
        <item name="android:fontFamily">@font/nunito</item>
        <item name="android:textColor">@color/black</item>
    </style>
</resources>